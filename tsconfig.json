{
  "compilerOptions": {
    "target": "es6",
    "module": "esnext",
    "strict": true,
    "allowJs": true,
    "importHelpers": true,
    "moduleResolution": "node",
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "baseUrl": ".",
    "rootDir": "src",
    "outDir": "lib",
    "declaration": true,
    "sourceMap": true,
    "noImplicitAny": true,
    "noImplicitReturns": true,
    "noImplicitThis": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "strictNullChecks": true,
    "suppressImplicitAnyIndexErrors": true,

    "lib": [
      "esnext",
      "dom",
      "es2017"
    ],

    "paths": {
      "*": ["*"],
      "app/*": ["src/*"],
      "test/*": ["test/*"]
    }
  },

  "include": [
    "src",
    "test"
  ],

  "exclude": [
    "lib",
    "node_modules"
  ]
}
